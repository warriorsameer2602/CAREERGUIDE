<!-- Notification Setup Panel -->
<div class="notification-panel" id="notificationPanel">
    <div class="panel-content">
        <h4>Smart Notifications</h4>
        <p>Get personalized reminders for important deadlines</p>
        
        <div class="notification-options">
            <div class="option-group">
                <label class="option-label">
                    <input type="checkbox" id="emailNotifications" checked>
                    <span class="checkmark"></span>
                    Email Reminders
                </label>
                <small>Get detailed email reminders 7 days before deadlines</small>
            </div>
            
            <div class="option-group">
                <label class="option-label">
                    <input type="checkbox" id="pushNotifications">
                    <span class="checkmark"></span>
                    Push Notifications
                </label>
                <small>Browser notifications for urgent deadlines</small>
            </div>
            
            <div class="option-group">
                <label class="option-label">
                    <input type="checkbox" id="smsNotifications">
                    <span class="checkmark"></span>
                    SMS Alerts
                </label>
                <small>Text messages for critical deadlines</small>
            </div>
        </div>
        
        <div class="notification-timing">
            <h5>Reminder Timing</h5>
            <div class="timing-options">
                <label><input type="checkbox" checked> 30 days before</label>
                <label><input type="checkbox" checked> 15 days before</label>
                <label><input type="checkbox" checked> 7 days before</label>
                <label><input type="checkbox" checked> 1 day before</label>
            </div>
        </div>
        
        <div class="panel-actions">
            <button class="btn-save" id="saveNotifications">Save Preferences</button>
            <button class="btn-cancel" id="cancelNotifications">Cancel</button>
        </div>
    </div>
</div>


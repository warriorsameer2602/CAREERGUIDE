<!-- AI Assistant Hero Section -->
<section class="ai-hero">
    <div class="container">
        <div class="ai-hero-content">
            <div class="ai-avatar">
                <div class="avatar-circle">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="typing-indicator" id="typingIndicator" style="display: none;">
                    <span></span><span></span><span></span>
                </div>
            </div>
            <h1 class="ai-title">
                Meet Your <span class="gradient-text">AI Career Guide</span>
            </h1>
            <p class="ai-subtitle">
                Get personalized career guidance, college recommendations, and scholarship information powered by AI
            </p>
        </div>
    </div>
</section>

<!-- Chat Interface -->
<section class="chat-section">
    <div class="container">
        <div class="chat-container">
            <!-- Chat Header -->
            <div class="chat-header">
                <div class="assistant-info">
                    <div class="assistant-avatar">
                        <i class="fas fa-robot"></i>
                    </div>
                    <div class="assistant-details">
                        <h4>CareerGuide AI</h4>
                        <span class="status online">Online</span>
                    </div>
                </div>
                <div class="chat-actions">
                    <button class="clear-chat-btn" id="clearChat" title="Clear Chat">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                    <button class="minimize-btn" id="minimizeChat" title="Minimize">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>

            <!-- Chat Messages -->
            <div class="chat-messages" id="chatMessages">
                <div class="welcome-message">
                    <div class="message ai-message">
                        <div class="message-avatar">
                            <i class="fas fa-robot"></i>
                        </div>
                        <div class="message-content">
                            <div class="message-bubble">
                                <p>üëã Hello! I'm your AI Career Guide. I can help you with:</p>
                                <ul>
                                    <li>üéØ Stream selection (Science/Commerce/Arts)</li>
                                    <li>üèõÔ∏è Government college recommendations</li>
                                    <li>üìö Career path guidance</li>
                                    <li>üìù Entrance exam preparation</li>
                                    <li>üí∞ Scholarship information</li>
                                </ul>
                                <p>What would you like to know about your career?</p>
                            </div>
                            <span class="message-time">Just now</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Suggestions -->
            <div class="quick-suggestions" id="quickSuggestions">
                <div class="suggestions-header">
                    <span>üí° Quick Questions:</span>
                </div>
                <div class="suggestions-list">
                    <button class="suggestion-btn" data-message="What career should I choose after 12th?">
                        What career should I choose after 12th?
                    </button>
                    <button class="suggestion-btn" data-message="Tell me about engineering colleges in Bihar">
                        Engineering colleges in Bihar
                    </button>
                    <button class="suggestion-btn" data-message="What scholarships are available for me?">
                        Available scholarships
                    </button>
                    <button class="suggestion-btn" data-message="How to prepare for JEE exam?">
                        JEE exam preparation
                    </button>
                </div>
            </div>

            <!-- Chat Input -->
            <form class="chat-input-form" id="chatForm">
                <div class="input-container">
                    <input 
                        type="text" 
                        id="chatInput" 
                        placeholder="Type your career question here..." 
                        autocomplete="off"
                        maxlength="500"
                    />
                    <button type="button" class="attachment-btn" title="Quick Actions">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <button type="submit" class="send-btn" id="sendBtn" title="Send Message">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
                <div class="input-footer">
                    <span class="char-count">0/500</span>
                    <span class="ai-badge">Powered by AI</span>
                </div>
            </form>
        </div>
    </div>
</section>


    <script>
        // Sectors Chart
        const sectorsCtx = document.getElementById('sectorsChart').getContext('2d');
        new Chart(sectorsCtx, {
            type: 'doughnut',
            data: {
                labels: ['Technology', 'E-commerce', 'FinTech', 'HealthTech', 'EdTech', 'Others'],
                datasets: [{
                    data: [35, 20, 15, 12, 10, 8],
                    backgroundColor: [
                        '#6366f1',
                        '#8b5cf6',
                        '#06b6d4',
                        '#10b981',
                        '#f59e0b',
                        '#ef4444'
                    ],
                    borderWidth: 3,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Startup Sectors Distribution in India (%)',
                        font: { size: 16, weight: 'bold' },
                        color: '#1e293b'
                    },
                    legend: {
                        position: 'bottom',
                        labels: {

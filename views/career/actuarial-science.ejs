    <!-- Specializations -->
    <section class="section-card">
        <h2><i class="fas fa-sitemap"></i> Actuarial Specializations</h2>
        
        <div class="info-grid">
            <div class="branch-card">
                <h4><i class="fas fa-shield-alt"></i> Life Insurance</h4>
                <p>Life insurance policies, annuities, pension plans, mortality analysis</p>
            </div>
            <div class="branch-card">
                <h4><i class="fas fa-car"></i> General Insurance</h4>
                <p>Property, casualty, auto, health insurance risk assessment</p>
            </div>
            <div class="branch-card">
                <h4><i class="fas fa-chart-bar"></i> Investment & Risk Management</h4>
                <p>Portfolio risk, asset-liability management, financial derivatives</p>
            </div>
            <div class="branch-card">
                <h4><i class="fas fa-heartbeat"></i> Health Insurance</h4>
                <p>Medical insurance, healthcare cost analysis, epidemiology</p>
            </div>
            <div class="branch-card">
                <h4><i class="fas fa-coins"></i> Pension & Employee Benefits</h4>
                <p>Retirement plans, employee benefits, social security systems</p>
            </div>
